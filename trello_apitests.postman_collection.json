				{
					"listen": "test",
					"script": {
						"exec": [
							"var responseJson = JSON.parse(responseBody);\r",
							"\r",
							"var board_id = responseJson.id;\r",
							"var board_name = responseJson.name;\r",
							"\r",
							"pm.environment.set(\"board_id\", board_id);\r",
							"pm.environment.set(\"board_name\", board_name);\r",
							"\r",
							"pm.test(\"Board is created\", function (){\r",
							"    pm.expect(board_name).to.equal(pm.environment.get(\"board_name\"));\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
